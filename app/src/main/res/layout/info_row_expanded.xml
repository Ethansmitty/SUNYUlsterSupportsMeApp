<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/info_title"
            android:layout_width="0dp"
            android:layout_height="40sp"
            android:layout_marginStart="40dp"
            android:background="@drawable/menu_item_background_selected"
            android:gravity="center_vertical|start"
            android:onClick="onItemClick"
            android:textAlignment="textStart"
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Subtitle"
            android:textColor="@color/colorTextMenuClicked"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0"
            tools:text="@string/placeholderText" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/menu_item_background_selected"
            android:contentDescription="@string/iconText"
            app:layout_constraintBottom_toBottomOf="@+id/info_title"
            app:layout_constraintEnd_toStartOf="@+id/info_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/info_title" />

        <TextView
            android:id="@+id/info_desc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/menu_item_background_selected"
            android:gravity="center_vertical|start"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/info_title"
            tools:text="@string/placeholderText" />


    </android.support.constraint.ConstraintLayout>

</LinearLayout>